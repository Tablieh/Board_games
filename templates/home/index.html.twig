                                                {% endif %}
                                                <p>{{ places_left }} places left</p>
                                            </div>
                                            <p class="adress-p1" >{{ laste.adresse}}
                                                {{ laste.cp}} {{ laste.city}}</p>
                                            <p>{{ laste.dateEvent|date("H:iA")}}</p>
