                    window.onscroll = function() {
                        
                        if ( currentPath !== "/addEvent" && document.body.scrollTop > 20 ||  currentPath !== "/addEvent" &&  document.documentElement.scrollTop > 20) {
                            myButtonProfile.style.opacity = "1";
                            
